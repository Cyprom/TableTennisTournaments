<UserControl x:Class="Cyprom.TableTennisTournaments.View.Details.MatchDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:overviews="clr-namespace:Cyprom.TableTennisTournaments.View.Overviews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Side 1:" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="txtSide1" IsReadOnly="True" Margin="3" />
        <Label Grid.Row="1" Grid.Column="0" Content="Side 2:" />
        <TextBox Grid.Row="1" Grid.Column="1" Name="txtSide2" IsReadOnly="True" Margin="3" />
    </Grid>
</UserControl>
